<script src="https://js.arcgis.com/4.3/"></script>

<script type="text/javascript">
require([
  "esri/Map",
  "esri/views/MapView",
  "esri/layers/TileLayer",
  "esri/layers/FeatureLayer", 
   "esri/tasks/QueryTask",
  "esri/tasks/support/Query",
  "esri/geometry/Extent",
  "esri/geometry/Point",
  "dojo/domReady!"], function(haritam,gorunum,katman,durakatman,sorgula,sorgum) {
   var transportationLyr = new katman ({      
   url: "https://server.arcgisonline.com/ArcGIS/rest/services/Reference/World_Transportation/MapServer" });
	

   var map = new haritam(
 {  basemap:"satellite" });
 
  var view = new gorunum({
  map: map,
  container: "melDiv" ,
  zoom:14,
  center:[28.7930,41.1078] 
 });
 
  var fl = new durakatman({
  portalItem: { id: "b2c176787528437880797695ef8d4c70"} }); 
  
  map.add(fl);
  
  map.add(transportationLyr);
  
var saydam =document.getElementById("mk");
saydam.onclick= function () {transportationLyr.opacity= document.getElementById("km").value;}


  
var bcd=document.getElementById("br");
bcd.onclick= function() { transportationLyr.visible =0; }

var abc=document.getElementById("bm");
abc.onclick= function() { transportationLyr.visible =1; }

var cde=document.getElementById("bd");
cde.onclick= function() {
view.goTo(fl.fullExtent);
}

var durakth = document.DurakAlani.elements[0].value;
 
var queryTask  = new sorgula({
 url:"https://services7.arcgis.com/wNYXScVQAVZqIBpy/ArcGIS/rest/services/bdurak/FeatureServer/0?token=WyPc-gtoB__igYkkrfuwdlXetvgmw27ZTWT7LrR9myNt8WG_B6KAh1j0CBJvfFkIF5We8Sb3YoVl8UriUdIf4Sly-2vzmeEerMQftG8ZbYzi1BZm1B8d6v5ns6O4OfvKwAXot8RAE7TK8tY752Zr5o-PEWaeO8OhCDftOry0Exz-XuORTwhKXXxswjBw_HZzHaecaV-uVPuaOZfvMLClNSFwcxxWwYfpj1Vsv5FBqs4."
  });
  

var efg= document.getElementById("bc");

efg.onclick=function () {
var durakth = document.DurakAlani.elements[0].value;
queryTask.executeForExtent({where:"FID="+durakth}).then(function(resultsm) { 

view.goTo(resultsm) ; 

 });
 }
 
});


</script>
